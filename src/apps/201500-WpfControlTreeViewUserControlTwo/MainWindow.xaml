<Window x:Class="WpfControlTreeViewUserControlTwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlTreeViewUserControlTwo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <TextBlock Text="This is MainWindow.xaml" FontSize="16" Margin="10"/>
            <local:MyUserControlOne />
            <Button Margin="10" x:Name="BtnShowControlTree" 
                    Content="Show Tree" Click="BtnShowControlTree_Click" ></Button>
            <Button Margin="10" x:Name="BtnAnalyzeUserControl" 
                    Content="Analyze User Control" Click="BtnAnalyzeUserControl_Click" ></Button>
        </StackPanel>
        <Grid Margin="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                <TreeView x:Name="ControlTreeView">
                </TreeView>
            </ScrollViewer>
        </Grid>
    </StackPanel>
</Window>
