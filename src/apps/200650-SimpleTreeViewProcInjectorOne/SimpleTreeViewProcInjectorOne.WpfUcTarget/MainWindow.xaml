<Window x:Class="SimpleTreeViewProcInjectorOne.WpfUcTarget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleTreeViewProcInjectorOne.WpfUcTarget"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <TextBlock Text="This is MainWindow.xaml" FontSize="16" Margin="10"/>
            <local:MyUserControlOne />
            <Button Margin="10" x:Name="BtnShowControlTree" 
                    Content="Show Tree" Click="BtnShowControlTree_Click" ></Button>
            <Button Margin="10" x:Name="BtnAnalyzeUserControl" 
                    Content="Analyze User Control" Click="BtnAnalyzeUserControl_Click" ></Button>
            <Button x:Name="copyProcessIdButton" Margin="10" Content="Copy Process Details" Click="copyProcessIdButton_Click" />
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" x:Name="secondTextBox" Margin="10" FontSize="25" >Process Id:</TextBlock>
                <TextBlock HorizontalAlignment="Center" x:Name="resultTextBox" Margin="10" FontSize="25" >0</TextBlock>
            </StackPanel>
        </StackPanel>
        <Grid Margin="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                <TreeView x:Name="ControlTreeView">
                </TreeView>
            </ScrollViewer>
        </Grid>
    </StackPanel>
</Window>
