<Window x:Class="WpfControlTreeViewOne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlTreeViewOne"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Margin="4">
            <TextBlock Margin="4" Background="LightBlue">
                Hold Ctrl and left-click to display logical tree
                <LineBreak />
                Hold Ctrl and right-click to display visual tree
                <LineBreak />
                <InlineUIContainer>
                    <ComboBox Padding="4" SelectedIndex="0">
                        I am in the TextBlock!
                    </ComboBox>
                </InlineUIContainer>
            </TextBlock>
            <Button Margin="4" Padding="4">Clear the console window</Button>
            <ListBox Margin="4" >
                <sys:Int32>1</sys:Int32>
                <sys:Double>2.22</sys:Double>
                <sys:String>Three</sys:String>
                <Border BorderBrush="Black" BorderThickness="1">
                    <CheckBox Padding="0,0,8,0">
                        <TextBlock Background="LightBlue">
                            I am in the ListBox
                        </TextBlock>
                    </CheckBox>
                </Border>
            </ListBox>
            <Button x:Name="BtnShowControlTree" Content="Show Tree" Click="BtnShowControlTree_Click" ></Button>
        </StackPanel>
        <Grid Margin="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                <TreeView x:Name="ControlTreeView">
                </TreeView>
            </ScrollViewer>
        </Grid>
    </StackPanel>
</Window>
